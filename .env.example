# Environment Configuration
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Firebase Admin (server-side)
# Option A: provide a path to a service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=

# Option B: provide the full JSON as a single environment variable (escaped)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
FIREBASE_SERVICE_ACCOUNT_JSON=

# Optional: explicitly set project id (if not present in the service account)
FIREBASE_PROJECT_ID=

# Firebase Emulator Suite (local dev)
# Set to true to run backend without service-account credentials.
FIREBASE_USE_EMULATORS=false

# Firestore emulator (default port 8080)
FIRESTORE_EMULATOR_HOST=127.0.0.1:8080

# Auth emulator (default port 9099)
FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099

# Storage emulator (optional)
FIREBASE_STORAGE_EMULATOR_HOST=127.0.0.1:9199

# Firebase Web (client-side)
# NOTE: This config is meant for a browser app (React/Vite/Next/etc), not for Node.
FIREBASE_WEB_API_KEY=
FIREBASE_WEB_AUTH_DOMAIN=
FIREBASE_WEB_PROJECT_ID=
FIREBASE_WEB_STORAGE_BUCKET=
FIREBASE_WEB_MESSAGING_SENDER_ID=
FIREBASE_WEB_APP_ID=
FIREBASE_WEB_MEASUREMENT_ID=

# Add your environment variables below
# API_KEY=your_api_key_here
# DATABASE_URL=your_database_url_here
